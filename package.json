{
	"name": "stravistix",
	"version": "1.0.0",
	"description": "Wrap the needed tools required to cook the StravistiX Web Plugin",
	"scripts": {
		"build": "npm-run-all clean res-copy:* build-project:core build-project:app",
		"build:prod": "npm-run-all clean res-copy:* build-project:core@prod build-project:app@prod",
		"build-project:app": "cd ./plugin/app/ && node ./node_modules/@angular/cli/bin/ng --version && node ./node_modules/@angular/cli/bin/ng build",
		"build-project:app@prod": "npm run build-project:app -- --prod",
		"build-project:core": "npm run tsc:core",
		"build-project:core@prod": "npm run tsc:core@prod",
		"clean": "npm-run-all clean:jsmap clean:dist clean:package",
		"clean:dist": "node ./node_modules/rimraf/bin.js ./dist/",
		"clean:jsmap": "node ./node_modules/rimraf/bin.js plugin/common/**/*.js plugin/common/**/*.map plugin/core/**/*.js plugin/core/**/*.map plugin/options/app/**/*.js plugin/options/app/**/*.map specs/**/*.map specs/**/*.js",
		"clean:package": "node ./node_modules/rimraf/bin.js ./package/",
		"package": "npm-run-all clean build:prod zipRelease",
		"postinstall": "cd ./plugin/ && npm install && cd ./app/ && npm install",
		"res-copy:libs@core": "node ./node_modules/cpy-cli/cli.js ./node_modules/systemjs/dist/system.js ./node_modules/systemjs-plugin-css/css.js ./node_modules/geodesy/dms.js ./node_modules/geodesy/latlon-spherical.js ./node_modules/chart.js/dist/Chart.bundle.js ./node_modules/qrcode/build/qrcode.min.js ./node_modules/fancybox/dist/js/jquery.fancybox.pack.js ./node_modules/lodash/lodash.min.js ./node_modules/jquery/dist/jquery.js ../dist/ --cwd=plugin --parents",
		"res-copy:css@core": "node ./node_modules/cpy-cli/cli.js ./core/css/core.css ./node_modules/fancybox/dist/css/jquery.fancybox.css ../dist/ --cwd=plugin --parents",
		"res-copy:img@core": "node ./node_modules/cpy-cli/cli.js ./core/icons/* ./node_modules/fancybox/dist/img/* ../dist/ --cwd=plugin --parents",
		"res-copy:manifest": "node ./node_modules/cpy-cli/cli.js ./plugin/manifest.json ./dist/",
		"res-copy:old-app-to-remove": "node ./node_modules/cpy-cli/cli.js ./node_modules/angular-material/angular-material.css ./node_modules/angular-material-icons/angular-material-icons.css ./node_modules/angular-material-data-table/dist/md-data-table.min.css ./node_modules/nvd3/build/nv.d3.min.css ./node_modules/angular/angular.js ./node_modules/angular-route/angular-route.js ./node_modules/angular-sanitize/angular-sanitize.js ./node_modules/angular-animate/angular-animate.js ./node_modules/angular-aria/angular-aria.js ./node_modules/angular-messages/angular-messages.js ./node_modules/angular-material/angular-material.js ./node_modules/angular-material-icons/angular-material-icons.js ./node_modules/angular-material-data-table/dist/md-data-table.min.js ./node_modules/q/q.js ./node_modules/d3/d3.js ./node_modules/nvd3/build/nv.d3.min.js ./node_modules/angular-nvd3/dist/angular-nvd3.min.js ./node_modules/moment/moment.js ./node_modules/file-saver/FileSaver.min.js ./options/**/*.html ./options/**/styles/* ./options/**/img/* ./options/**/icons/* ../dist/ --cwd=plugin --parents",
		"test": "npm-run-all clean test:core test:app-headless",
		"test:app": "cd ./plugin/app/ && node ./node_modules/@angular/cli/bin/ng test",
		"test:app-headless": "npm run test:app -- --browsers ChromeHeadless --watch false",
		"test:core": "npm-run-all clean:jsmap tsc:core@test && node ./node_modules/karma/bin/karma start karma.conf.js --single-run && npm run clean:jsmap",
		"tsc:version": "node -e \"const tsc = require('typescript'); console.log('typescript version: ' + tsc.version)\"",
		"tsc:core": "npm run tsc:version && node ./node_modules/typescript/bin/tsc -p tsconfig.json",
		"tsc:core@prod": "npm run tsc:version && node ./node_modules/typescript/bin/tsc -p tsconfig.prod.json",
		"tsc:core@test": "npm run tsc:version && node ./node_modules/typescript/bin/tsc -p tsconfig.test.json",
		"tsc:core@watch": "npm run tsc:core -- --watch",
		"start": "npm run watch",
		"watch": "npm run clean && npm-run-all --print-label --parallel watch:*",
		"watch:app": "npm run build-project:app -- --watch",
		"watch:core": "npm-run-all res-copy:* tsc:core@watch",
		"wipe": "npm run clean && node ./node_modules/rimraf/bin.js ./node_modules/ ./plugin/node_modules/ ./plugin/app/node_modules/",
		"zipRelease": "node -e \"const zipFolder = require('zip-folder');const fs = require('fs');const manifest = require('./dist/manifest.json');const targetDir = './package';if (!fs.existsSync(targetDir)) fs.mkdirSync(targetDir);zipFolder('./dist', targetDir + '/release_' + manifest.version + '.zip', (errors) => {process.exit((errors) ? 1 : 0);});\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/thomaschampagne/stravistix"
	},
	"author": {
		"name": "Thomas Champagne",
		"email": "th.champagne@gmail.com",
		"web": "http://thomaschampagne.github.io"
	},
	"contributors": [
		{
			"name": "Thomas Champagne",
			"email": "th.champagne@gmail.com",
			"web": "http://thomaschampagne.github.io"
		}
	],
	"license": "MIT",
	"readme": "README.md",
	"devDependencies": {
		"@types/angular": "^1.6.38",
		"@types/angular-material": "^1.1.55",
		"@types/chart.js": "^2.6.11",
		"@types/chrome": "0.0.47",
		"@types/d3": "^3.5.38",
		"@types/file-saver": "0.0.1",
		"@types/filesystem": "0.0.28",
		"@types/filewriter": "0.0.28",
		"@types/googlemaps": "^3.29.2",
		"@types/jasmine": "^2.6.2",
		"@types/jquery": "^3.2.16",
		"@types/lodash": "^4.14.81",
		"@types/nvd3": "^1.8.37",
		"@types/q": "^1.0.6",
		"@types/qrcode": "^0.8.0",
		"@types/systemjs": "^0.20.6",
		"cpy-cli": "^1.0.1",
		"jasmine": "^2.6.0",
		"karma": "^1.7.0",
		"karma-chrome-launcher": "^1.0.1",
		"karma-coverage": "^1.1.1",
		"karma-jasmine": "^1.1.0",
		"karma-json-fixtures-preprocessor": "0.0.6",
		"karma-opera-launcher": "^1.0.0",
		"karma-promise": "^0.1.0",
		"karma-systemjs": "^0.16.0",
		"karma-typescript": "^2.1.7",
		"lodash": "^4.17.4",
		"npm-run-all": "^4.1.2",
		"rimraf": "^2.6.2",
		"run-sequence": "^1.2.2",
		"systemjs": "^0.19.0",
		"systemjs-plugin-babel": "0.0.25",
		"traceur": "0.0.111",
		"typescript": "~2.4.2"
	},
	"dependencies": {
		"bestzip": "^1.1.4",
		"zip-folder": "^1.0.0"
	}
}
