{
    "manifest_version": 2,
    "name": "StravistiX for Strava",
    "short_name": "StravistiX",
    "description": "Add the missing features of Strava website with new performances data and improved ergonomics",
    "version": "1.0.2",
    "version_name": "1.0.2 stable",
    "background": {
        "scripts": [
            "js/UserSettings.js",
            "js/StravistiX.js",
            "js/background.js",
            "modules/StorageManager.js"
        ]
    },
    "content_scripts": [{
        "js": [
            "node_modules/underscore/underscore-min.js",
            "js/Helper.js",
            "js/UserSettings.js",
            "js/Content.js"
        ],
        "run_at": "document_end",
        "matches": [
            "*://www.strava.com/*",
            "*://app.strava.com/*"
        ]
    }],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "options_page": "options/app/index.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
    "permissions": [
        "*://www.strava.com/*",
        "*://app.strava.com/*",
        "storage"
    ],
    "web_accessible_resources": [
        "node_modules/*",
        "modules/*",
        "config/*",
        "js/processors/*",
        "js/modifiers/*",
        "js/*",
        "css/*",
        "options/*",
        "icons/*"
    ],
    "externally_connectable": {
        "matches": ["*://*.strava.com/*"]
    }
}
